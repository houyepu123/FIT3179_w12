{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 360,
    "height": 300,
    "description": "Annual CO₂ emissions (per capita) vs. GDP per capita for various countries in 2021",
    "data": {
      "url": "cleaned_data.csv"
    },
    "mark": "point",
    "encoding": {
      "x": {
        "field": "GDP per capita",
        "type": "quantitative",
        "title": "GDP per capita"
      },
      "y": {
        "field": "Annual CO₂ emissions",
        "type": "quantitative",
        "title": "Annual CO₂ emissions",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "Entity", "type": "nominal", "title": "Country"},
        {"field": "GDP per capita", "type": "quantitative","format": ",.0f"},
        {"field": "Annual CO₂ emissions", "type": "quantitative","format": ",.0f"}
      ]
    }
  }
  