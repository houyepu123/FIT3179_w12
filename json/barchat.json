{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
      "url": "../csv/cleaned_data.csv"
    },
    "hconcat": [
      {
        "width": 290,
        "transform": [
          {
            "filter": "datum.Entity !== 'World'"
          },
          {
            "sort": [{"field": "GDP per capita", "order": "descending"}],
            "window": [{"op": "row_number", "as": "rank"}],
            "frame": [null, null]
          },
          {
            "filter": "datum.rank <= 10"
          }
        ],
        "mark": "bar",
        "encoding": {
          "y": {
            "field": "Entity",
            "type": "ordinal",
            "sort": "-x",
            "title": "Country"
          },
          "x": {
            "field": "GDP per capita",
            "type": "quantitative",
            "title": "GDP per capita"
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal"},
            {"field": "GDP per capita", "type": "quantitative"}
          ]
        },
        "title": "Top 10 Countries by GDP per capita"
      },
      {
        "width": 290,
        "transform": [
          {
            "filter": "datum.Entity !== 'World'"
          },
          {
            "sort": [{"field": "Annual CO₂ emissions", "order": "descending"}],
            "window": [{"op": "row_number", "as": "rank"}],
            "frame": [null, null]
          },
          {
            "filter": "datum.rank <= 10"
          }
        ],
        "mark": "bar",
        "encoding": {
          "y": {
            "field": "Entity",
            "type": "ordinal",
            "sort": "-x",
            "title": "Country"
          },
          "x": {
            "field": "Annual CO₂ emissions",
            "type": "quantitative",
            "title": "CO₂ emissions"
          },
          "tooltip": [
            {"field": "Entity", "type": "nominal"},
            {"field": "Annual CO₂ emissions", "type": "quantitative"}
          ]
        },
        "title": "Top 10 Countries by CO₂ emissions"
      }
    ],
    "config": {
      "view": {
        "stroke": "transparent"
      },
      "axis": {
        "domainWidth": 1
      }
    }
  }
  
